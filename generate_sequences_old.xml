 			<yangCodonModel idref="yang.5000"/>
 			<yangCodonModel idref="yang.10000"/>
        </models>
        <strictClockBranchRates idref="branchRates"/>         
        <parameter id="transitionTimes" value="10 50 100 500 1000 5000"/>
	</beagleSubstitutionEpochModel> 

	<!-- site model                                                              -->
	<siteModel id="siteModel">
		<branchSubstitutionModel>
        	<beagleSubstitutionEpochModel idref="oldEpochModel"/>
		</branchSubstitutionModel>
<!--
	     <gammaShape gammaCategories="4">
			<parameter id="siteModel.alpha" value="0.5" lower="0.0" upper="1000.0"/>
		</gammaShape>
-->
	</siteModel>

    <!-- simulate some sequence data under this model -->
	<oldBeagleSequenceSimulator id="simulator" replications="500">
		<oldPartition from="1" to="500" every="1">
			<treeModel idref="treeModel"/>
			<beagleSubstitutionEpochModel idref="oldEpochModel"/>
  			<siteModel idref="siteModel"/>
  			<strictClockBranchRates idref="branchRates"/>
  			<frequencyModel idref="freqModel"/>
		</oldPartition>
	</oldBeagleSequenceSimulator>

    <report fileName="sequences.fasta">
        <beagleSequenceSimulator idref="simulator"/>
    </report>

